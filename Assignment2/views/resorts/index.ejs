<% layout('layout')%>
    <div id="cluster-map"></div>
    <div class="container">
        <h1>All Ski Resorts Here</h1>

        <% for (let resort of resorts){%>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= resort.title %>
                            </h5>

                            <p class="card-text">
                                <%= resort.description %>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= resort.location%>
                                </small>
                            </p>
                            <a class="btn btn-primary" href="/resorts/<%=resort._id%>">View
                                <%=resort.title%>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <% }%>
    </div>